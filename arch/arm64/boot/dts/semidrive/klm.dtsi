#include "misc.dtsi"
#include <dt-bindings/interrupt-controller/arm-gic.h>

/ {
	compatible = "semidrive,kunlun";

	cpus {
		#address-cells = <2>;
		#size-cells = <0>;

		cpu0: cpu@0 {
			device_type = "cpu";
			compatible = "arm,cortex-a55", "arm,armv8";
			reg = <0x0 0x30000>;
			enable-method = "psci";
		};
